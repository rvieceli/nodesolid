{
  "name": "nodesolid",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "build": "tsup src --out-dir build",
    "start": "node build/server.js",
    "migrate:generate": "drizzle-kit generate:pg",
    "migrate:drop": "drizzle-kit drop",
    "lint:check": "eslint src/**",
    "lint:fix": "eslint --fix src",
    "prettier:check": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "format:check": "npm run lint:check && npm run prettier:check",
    "format:fix": "npm run lint:fix && npm run prettier:fix",
    "compose:up": "docker compose up -d",
    "compose:build": "docker compose up -d --build",
    "compose:stop": "docker compose stop",
    "compose:down": "docker compose down",
    "compose:destroy": "docker compose down --volumes --rmi all",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.7",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "drizzle-kit": "^0.20.10",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.25.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  }
}
